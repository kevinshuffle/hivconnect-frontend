---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';

const title = "Message Sent Successfully";
const description = "Thank you for contacting us. We will review your message and get back to you soon.";
---

<BaseLayout title={title} description={description}>
  <Header />
  
  <main id="main-content" class="flex-1">
    <section class="py-16 bg-gradient-to-br from-success-50 to-primary-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <!-- Success Icon -->
        <div class="w-20 h-20 bg-success-100 rounded-full flex items-center justify-center mx-auto mb-8">
          <svg class="w-10 h-10 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
          Thank You!
        </h1>
        
        <p class="text-xl lg:text-2xl text-gray-700 mb-8">
          Your message has been sent successfully
        </p>
        
        <div class="bg-white rounded-lg shadow-md p-8 mb-8">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">What happens next?</h2>
          <div class="space-y-4 text-left max-w-2xl mx-auto">
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-primary-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h3 class="font-semibold text-gray-900">We'll review your message</h3>
                <p class="text-gray-600">Our team will carefully review your inquiry and determine the best way to help.</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-primary-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <div>
                <h3 class="font-semibold text-gray-900">We'll get back to you</h3>
                <p class="text-gray-600">Expect to hear from us within 1-2 business days via email or phone.</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-primary-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
              <div>
                <h3 class="font-semibold text-gray-900">We're here to help</h3>
                <p class="text-gray-600">Our goal is to connect you with the care and support you need.</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Need immediate help section -->
        <div class="bg-primary-50 rounded-lg p-6 mb-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Need Immediate Help?</h3>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <a href="tel:988" class="btn-primary text-center py-3">
              Crisis Support: 988
            </a>
            <a href="tel:911" class="emergency-button text-center py-3">
              Emergency: 911
            </a>
            <a href="tel:18004484663" class="btn-outline text-center py-3">
              HIV Hotline: 1-800-HIV-INFO
            </a>
          </div>
        </div>

        <!-- Action buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/" class="btn-primary">
            Return to Home
          </a>
          <a href="/find-services" class="btn-outline">
            Find Services
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>